/*
 * 8. Labels
 * ==========================================================================
 */
$labels: (
  "accepted": $best-practice-color,
  "approved": $above-average-color,
  "awaiting-acceptance": $average-color,
  "awaiting-approval": $average-color,
  "awaiting-validation": $average-color,
  "bank-active": $above-average-color,
  "bank-pending": $average-color,
  "bank-inactive": $below-average-color,
  "due": $below-average-color,
  "fileformat-error": $below-average-color,
  "file-error": $below-average-color,
  "funded": $best-practice-color,
  "in-progress": $above-average-color,
  "not-processed": $average-color,
  "paid": $above-average-color,
  "pending": $average-color,
  "preprocess": $average-color,
  "processed": $best-practice-color,
  "ineligible": $well-below-average-color,
  "rejected": $well-below-average-color,
  "cancelled": $well-below-average-color,
  "settled": $best-practice-color,
  "skipped": $below-average-color,
  "transferred": $best-practice-color,
  "unapproved": $below-average-color,
  "unpaid": $below-average-color,
  "uploaded": $average-color,
  "upload-failed": $below-average-color
);

// Status classes
@each $label_name, $label_color in $labels {
  .label-#{$label_name} {
    background-color: $label_color !important;
  }
}

/*
 * 9. Statuses
 * ==========================================================================
 */
$statuses: (
  "accepted": $best-practice-color,
  "approved": $above-average-color,
  "awaiting-acceptance": $average-color,
  "awaiting-approval": $below-average-color,
  "bank-active": $above-average-color,
  "bank-pending": $average-color,
  "bank-inactive": $below-average-color,
  "funded": $best-practice-color,
  "pending": $average-color,
  "ineligible": $well-below-average-color,
  "rejected": $well-below-average-color,
  "unapproved": $below-average-color
);

// Status classes
@each $status_name, $status_color in $statuses {
  .colour-#{$status_name} {
