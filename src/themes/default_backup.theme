// Gradient colours
%multistep-progress{
  @include vertical-gradient(lighten($primary-color-dark, 20%), lighten($primary-color-dark, 10%));
}

%bg-gradient {
  @include vertical-gradient(lighten($primary-color-dark, 25%), lighten($primary-color-dark, 10%));
  color:#fff;
}

.btn-invert {
  @include vertical-gradient($secondary-color, darken($secondary-color, 10%));
  border-color: darken($secondary-color, 5%);
  color: $primary-color !important;
  font-weight: 400;
  &:hover {
    @include vertical-gradient(darken($secondary-color, 10%), $secondary-color);
    color: $primary-color;
  }

  &:active {
    border-color: darken($secondary-color, 50%)
  }
}
$availability-widget-padding: 12px;
.btn-invert-sell {
  @include vertical-gradient($secondary-color, darken($secondary-color, 10%));
  border-color: darken($secondary-color, 5%);
  color: $primary-color !important;
  font-weight: 400;
  &:hover {
    @include vertical-gradient(darken($secondary-color, 10%), $secondary-color);
    color: $primary-color;
  }

  &:active {
    border-color: darken($secondary-color, 50%)
  }
}

