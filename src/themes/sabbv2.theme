 */
$filter-colors: (
"accepted": color("sabb-primary", "sabb-processed"),
"approved": color("sabb-primary", "sabb-approved"),
"awaiting-acceptance": color("sabb-primary", "sabb-pending"),
"awaiting-approval": color("sabb-primary", "sabb-pending"),
"awaiting-validation": color("sabb-primary", "sabb-pending"),
"due": color("sabb-primary", "sabb-unapproved"),
"file-error": color("sabb-primary", "sabb-unapproved"),
"fileformat-error": color("sabb-primary", "sabb-unapproved"),
"funded": color("sabb-primary", "sabb-processed"),
"ineligible": $well-below-average-color,
"paid": color("sabb-primary", "base"),
"pending": color("sabb-primary", "sabb-pending"),
"preprocess": color("sabb-primary", "sabb-pending"),
"rejected": $well-below-average-color,
"settled": color("sabb-primary", "sabb-processed"),
"transferred": color("sabb-primary", "sabb-processed"),
"unapproved": color("sabb-primary", "sabb-unapproved"),
"unpaid": color("sabb-primary", "base"),
"uploaded": color("sabb-primary", "sabb-pending"),
"upload-failed": color("sabb-primary", "sabb-unapproved"),
"file-not-approved": $well-below-average-color,
"processed": $well-below-average-color,
"not-processed": $well-below-average-color,
"skipped": $well-below-average-color,
"partially_processed": $well-below-average-color,
"partially_accepted": color("sabb-primary", "sabb-approved")
);

// Radio Buttons
@each $status_name, $status_color in $filter-colors {
  .radio_button.#{to-upper-case(str-replace($status_name, "-", "_"))} .check {
    border-color: $status_color !important;
    &:after {
      background: $status_color;
    }
  }
}

// Checkboxes
@each $status_name, $status_color in $filter-colors {

  .custom-checkbox.#{to-upper-case(str-replace($status_name, "-", "_"))} label{
    border: 2px solid $status_color;
  }

  .filter-element-container.status.checkbox,
  .filter-element-container.approvalStatus.checkbox,
